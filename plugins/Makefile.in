
PLUGINS     = @PLUGINS@
INSTALL     = @INSTALL@

prefix      = @prefix@
exec_prefix = @exec_prefix@
PLUGDIR     = @libdir@/@PROG@

all: plugins

plugins:
	for plug in $(PLUGINS); do \
	cd $$plug && make ; cd .. ; \
	done

install: plugins
	for plug in $(PLUGINS); do \
	$(INSTALL) -d $(DESTDIR)$(PLUGDIR) ; \
	$(INSTALL) -m 700 ./$$plug/ec_$$plug.so $(DESTDIR)$(PLUGDIR) ; \
	done

clean:
	rm -f *.bak
	for plug in $(PLUGINS); do \
	cd $$plug && make clean ; cd .. ; \
	done

distclean:
	for plug in $(PLUGINS); do \
	cd $$plug && make distclean ; cd .. ; \
	done
